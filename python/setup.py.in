from setuptools import setup
from Cython.Build import cythonize
from distutils.extension import Extension

packages=['paddle',
          'paddle.proto',
          'paddle.trainer',
          'paddle.trainer_config_helpers',
          'paddle.utils',
          'paddle.v2',
          'paddle.v2.dataset',
          'paddle.v2.reader',
          'paddle.v2.plot']
extensions=[Extension("*", ["${CMAKE_CURRENT_SOURCE_DIR}/paddle/v2/reader/*.pyx"]),
            Extension("*", ["${CMAKE_CURRENT_SOURCE_DIR}/paddle/v2/*.pyx"])]

setup(name='paddle',
      version='${PADDLE_VERSION}',
      description='Parallel Distributed Deep Learning',
      packages=packages,
      ext_modules = cythonize(extensions),
      package_dir={
          '': '${CMAKE_CURRENT_SOURCE_DIR}'
      }
)
